#!/bin/sh

case "$1" in
  os)
    echo "rebuilding nix..."
    sudo nixos-rebuild switch --flake .
    echo "installing yazi plugins..."
    ya pkg install
    ;;
  dotfiles)
    dotbot -c install.conf.yaml
    ;;
  clean)
    nix-collect-garbage -d
    ;;
  toc)
    doctoc README.md
    ;;
  *)
    echo "Usage: $0 {os|dotfiles|clean|toc}"
    ;;
esac

